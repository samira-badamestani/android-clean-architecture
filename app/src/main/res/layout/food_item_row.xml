<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="item"
            type="com.architecture.clean.domain.model.Food"/>
        <variable
            name="click"
            type="com.architecture.clean.ui.home.callback.HomeCallBack"/>
    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        android:background="#f5f5f5"
        android:layout_marginBottom="8dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp"
        android:onClick="@{() -> click.itemClick(item)}">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:transitionName="profile"
                android:id="@+id/header">
                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/profile_pic"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_account_circle_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="fonts/Roboto-Medium.ttf"
                    android:textSize="14sp"
                    android:id="@+id/name"
                    android:textColor="#424242"
                    android:layout_toEndOf="@+id/profile_pic"
                    android:layout_marginStart="8dp"
                    android:text="@string/name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="fonts/Roboto-Light.ttf"
                    android:textColor="#4e4e4e"
                    android:textSize="10sp"
                    android:layout_toEndOf="@+id/profile_pic"
                    android:layout_marginStart="8dp"
                    android:layout_below="@+id/name"
                    android:id="@+id/time"
                    android:text="@string/date"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/like"
                    android:layout_toEndOf="@+id/time"
                    android:layout_below="@+id/name"
                    fontPath="fonts/Roboto-Light.ttf"
                    android:textColor="#4e4e4e"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/ic_favorite_border_black_24dp"
                    android:textSize="10sp"
                    android:text="1325"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/img_icon"
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:transitionName="image"
                app:image_url="@{item.thumbnail}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                fontPath="fonts/Roboto-Medium.ttf"
                android:textColor="#424242"
                android:textSize="15sp"
                android:padding="8dp"
                android:layout_below="@+id/img_icon"
                android:layout_alignParentEnd="true"
                android:text="@{item.ingredients}"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>